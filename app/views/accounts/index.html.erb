<div class= "container-fluid">
  <div class= "jumbotron text-center" >
    <h2>The account page of <%=current_user.email %></h2>
  </div>
 <%= render "layouts/navbar"%>

<a href="/accounts/new" class="btn btn-info" role="button"><i class="fas fa-plus-circle"></i>New Account</a>

  <h2>owned accounts</h2>
  <% if @accounts.present? %>
     <% @accounts.each do |a|%>
     <li class="list-group-item list-group-item-primary"> <%= a.name %> <a href ="<%= account_path(a)%>"><i class="fas fa-eye"></i> </a></li>
<%end%>
<% else %>
<li class="list-group-item list-group-item-dark"><i class="fas fa-frown"></i>No Account is associate to you </li>
<%end%>
  <h2>member of these accounts </h2>
    <% if @aa.present? %>
    <% @aa.each do |a|%>
      <li class="list-group-item list-group-item-primary"> <%= a.name %> <a href ="<%= account_path(a)%>"><i class="fas fa-eye"></i> </a></li>
  <%end%>
<% else %>
<li class="list-group-item list-group-item-dark"><i class="fas fa-frown"></i>No Account is associate to you </li>
<%end%>
